<body>
	<script src="../js/OpenLayers-v3.0.0-beta.1/build/ol.js" type="text/javascript"></script>
	<div id="map" class="map"></div>

	<script type="text/javascript">
	
	var map = new ol.Map({
        target: 'map',
        renderer: ol.RendererHint.CANVAS,
        layers: [
          new ol.layer.Tile({
            title: "BDTopo - route",
            source: new ol.source.TileWMS({
              url: 'http://localhost:8080/geoserver/wms',
              params: {'LAYERS': 'AM2IG:ROUTE'}
            })
          })
        ],
        view: new ol.View2D({
          center: ol.proj.transform([2.35, 48.853], 'EPSG:4326', 'EPSG:3857'),
          zoom: 12
        })
      });

	</script>
</body>


